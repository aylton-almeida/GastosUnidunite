<?import javafx.scene.layout.StackPane?>
<StackPane fx:id = "mainStackPane" prefHeight="790.0" prefWidth="893.0" xmlns="http://javafx.com/javafx/10.0.1"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <BorderPane fx:id="mainBorderPane">
        <center>
            <AnchorPane BorderPane.alignment="CENTER">
                <children>
                    <Text layoutX="273.0" layoutY="257.0" strokeType="OUTSIDE" strokeWidth="0.0"
